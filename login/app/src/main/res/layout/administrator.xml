<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/page1"
    android:visibility="gone">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:id="@+id/back"
        android:layout_gravity="center_horizontal"
        android:onClick="adclick1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 정보"
        android:id="@+id/info"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비콘 정보"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="관리자 계정"
        android:id="@+id/textView4"
        android:layout_above="@+id/info"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page2"
        android:onClick="page2click">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editsearch"
            android:hint="이름 입력"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/search"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색"
            android:id="@+id/search"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="btnclick1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:background="#ff000000"
            android:layout_below="@+id/search"
            android:id="@+id/line1"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/scrollview"
            android:layout_below="@+id/line1"
            android:fillViewport="true">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ff000000"
                android:dividerHeight="1dp"
                android:choiceMode="singleChoice"
                android:id="@+id/listview"
                android:scrollbars="horizontal"
                android:layout_alignParentStart="true"></ListView>
        </ScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:background="#ff000000"
            android:layout_below="@+id/scrollview"
            android:id="@+id/line2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   아이디"
                android:id="@+id/id"
                android:textSize="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       이름"
                android:id="@+id/name"
                android:textSize="30dp"
                android:layout_below="@+id/id"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       부서"
                android:id="@+id/department"
                android:textSize="30dp"
                android:layout_below="@+id/name"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       직급"
                android:id="@+id/rank"
                android:textSize="30dp"
                android:layout_below="@+id/department"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="접근권한"
                android:id="@+id/AC"
                android:textSize="30dp"
                android:layout_below="@+id/rank"
                android:paddingTop="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edid"
                android:layout_alignStart="@+id/edac"
                android:layout_toStartOf="@+id/delete" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name"
                android:layout_below="@+id/edid"
                android:id="@+id/edname"
                android:paddingTop="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/department"
                android:layout_below="@+id/edname"
                android:id="@+id/eddepart"
                android:paddingTop="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rank"
                android:layout_below="@+id/eddepart"
                android:id="@+id/edrank"
                android:paddingTop="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/AC"
                android:layout_below="@+id/edrank"
                android:id="@+id/edac"
                android:paddingTop="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:id="@+id/delete"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/edname" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로가기"
                android:id="@+id/turn"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/edac"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:id="@+id/update"
                android:layout_alignTop="@+id/turn"
                android:layout_toStartOf="@+id/turn"
                android:layout_toLeftOf="@+id/turn"/>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>